{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["warn", "always"],
        "@typescript-eslint/semi": ["warn", "always"],
        "@typescript-eslint/quotes": ["warn", "single", { "allowTemplateLiterals": true }],
        "no-multi-spaces": "off"
    }
}
